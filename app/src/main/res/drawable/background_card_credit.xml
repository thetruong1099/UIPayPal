<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="45"
                android:endColor="#0054ae"
                android:startColor="#0262e9"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>

    <item>
        <rotate
            android:fromDegrees="-27"
            android:pivotX="100%"
            android:pivotY="0%"
            android:toDegrees="0">
            <shape android:shape="rectangle" >
                <gradient android:angle="90"
                    android:endColor="#0262e9"
                    android:startColor="#015dd5"/>
            </shape>
        </rotate>
    </item>

    <item>
        <rotate
            android:fromDegrees="63"
            android:pivotX="0%"
            android:pivotY="100%"
            android:toDegrees="35">
            <shape android:shape="rectangle" >
                <gradient android:angle="-90"
                    android:endColor="#0054ae"
                    android:startColor="#0262e9"/>
            </shape>
        </rotate>
    </item>
</layer-list>